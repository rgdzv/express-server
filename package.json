{
    "name": "express-server",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "scripts": {
        "start:dev": "tsx --env-file=.env --watch src/index.ts",
        "build": "tsc && tsc-alias -p tsconfig.json",
        "serve": "node dist/index.js",
        "eslint:fix": "eslint --config config/eslint/eslint.config.mjs --fix",
        "prettier:write": "prettier --config config/prettier/prettier.config.mjs --ignore-path config/prettier/.prettierignore --write **/*.{ts,js,mjs,json}",
        "prepare": "husky"
    },
    "lint-staged": {
        "**/*.{ts,js,mjs,json}": [
            "npm run eslint:fix",
            "npm run prettier:write"
        ]
    },
    "author": "rgdzv",
    "license": "ISC",
    "dependencies": {
        "cors": "^2.8.5",
        "express": "^4.21.1",
        "sequelize": "^6.37.5",
        "sqlite3": "^5.1.7"
    },
    "devDependencies": {
        "@eslint/js": "^9.16.0",
        "@types/cors": "^2.8.17",
        "@types/express": "^5.0.0",
        "@types/node": "^22.10.1",
        "eslint": "^9.16.0",
        "eslint-config-prettier": "^9.1.0",
        "husky": "^9.1.7",
        "lint-staged": "^15.2.10",
        "prettier": "3.4.1",
        "sequelize-cli": "^6.6.2",
        "tsc-alias": "^1.8.10",
        "tsx": "^4.19.2",
        "typescript": "^5.7.2",
        "typescript-eslint": "^8.16.0"
    }
}
